/* pages/index.wxss */

.body {
    height: 100vh;
    background-color: #fff;
    padding-top: constant(safe-area-inset-top); /*兼容 IOS<11.2*/
    margin-top: env(safe-area-inset-top); /*兼容 IOS>11.2*/
}

.top_banner {
    height: 400rpx;
    width: 750rpx;
    background-color: #f5f5f5;
    overflow: hidden;
    margin-bottom: 80rpx;
}

.top_banner .img {
    width: 100%;
    height: 100%;
}

.lives {
    padding: 10rpx 21rpx;
    border-bottom: 1rpx solid #e3e3e3;
}

.lives-content, .lives-time {
    margin-bottom: 15rpx;
}

.lives-time {
    margin-top: 10px;
    color: #8c8c8c;
    font-size: 22rpx;
}

.lives-footage{

}
.footage-item {
    width: 230rpx;
    height: 230rpx;
    margin:0 3rpx;
    display: inline-block;
}

.lives-footage {
    width: 100%;
    height: 100%;
}